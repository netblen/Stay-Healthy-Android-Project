<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SleepActivity"
    android:background="@color/black">

    <!--put tthe catchgory of workout they clicked also need the back to home page button-->
    <TextView
        android:id="@+id/tvSleepTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sleep"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/btnChooseDay"
        android:layout_width="180dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvSleepTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/btn_custom"
        android:text="Today"
        android:textAllCaps="false"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="370dp"
        android:layout_height="200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnChooseDay"
        android:layout_marginTop="45dp"
        app:layout_constraintRight_toRightOf="parent"
        app:cardBackgroundColor="#181818"
        app:cardCornerRadius="25dp"
        >

        <TextView
            android:id="@+id/tvSleepSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sleep time"
            android:textSize="15sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"/>


        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <FrameLayout
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/circle_bg"
                android:backgroundTint="#5521CC">


                <ImageView
                    android:id="@+id/imgSleep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_sleep" />
            </FrameLayout>


            <TextView
                android:id="@+id/tvSleepHrs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="__ h"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="__ m"
                android:textSize="15dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvSleepMins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="80dp"
            android:paddingBottom="40dp"
            android:gravity="center"
            android:text="Record your sleep to see patterns and manage your sleep"
            android:textSize="13dp"
            android:layout_gravity="bottom"
            />


    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/btnEnterSleep"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@id/cardView1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/btn_custom"
        android:text="Enter data"
        android:textAllCaps="false"/>




</androidx.constraintlayout.widget.ConstraintLayout>