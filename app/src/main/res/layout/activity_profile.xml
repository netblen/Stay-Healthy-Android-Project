<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingBottom="20dp">

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif"
                android:text="Profile"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                android:textStyle="bold" />

            <!-- CARD 1: PROFILE INFO -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView1"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="#181818"
                app:cardCornerRadius="16dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp">

                    <!-- CRASH FIX: CardView Wrapper for Circle Image -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvProfileContainer"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="40dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/profileImage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_20220828_222619_272" />
                    </androidx.cardview.widget.CardView>

                    <Button
                        android:id="@+id/btnEdit"
                        android:layout_width="60dp"
                        android:layout_height="48dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/btn_custom"
                        android:fontFamily="sans-serif"
                        android:text="Edit"
                        android:textAllCaps="false"
                        android:textSize="13sp"
                        app:layout_constraintBottom_toBottomOf="@id/cvProfileContainer"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/cvProfileContainer"
                        android:enabled="false"/>

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="User"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cvProfileContainer" />

                    <!-- GROUP STATUS -->
                    <TextView
                        android:id="@+id/tvCurrentGroupProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Checking status..."
                        android:textColor="#3AE0A6"
                        android:textSize="14sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- CARD 2: DETAILS -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="370dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="#181818"
                app:cardCornerRadius="16dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvUserDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:text="User Details"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvEnterInfo"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:text="Enter information to help us get started on your journey"
                        android:textColor="#838282"
                        android:textSize="13sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvUserDetails" />

                    <TextView
                        android:id="@+id/tvWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="15dp"
                        android:text="Weight"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvEnterInfo" />

                    <EditText
                        android:id="@+id/edWeight"
                        android:layout_width="60dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="10dp"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:text="0.00"
                        android:textColor="@android:color/white"
                        app:layout_constraintBaseline_toBaselineOf="@id/tvWeight"
                        app:layout_constraintLeft_toRightOf="@id/tvWeight" />

                    <TextView
                        android:id="@+id/tvHeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="40dp"
                        android:text="Height"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvWeight" />

                    <EditText
                        android:id="@+id/edHeight"
                        android:layout_width="60dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="10dp"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:text="0.00"
                        android:textColor="@android:color/white"
                        app:layout_constraintBaseline_toBaselineOf="@id/tvHeight"
                        app:layout_constraintLeft_toRightOf="@id/tvWeight" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- CARD 3: GOALS -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView3"
                android:layout_width="370dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="#181818"
                app:cardCornerRadius="16dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvGoals"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:text="Goals"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <RadioGroup
                        android:id="@+id/rgGoals"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="10dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvGoals">

                        <RadioButton
                            android:id="@+id/rbWeightLoss"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@android:color/white"
                            android:scaleX="0.9"
                            android:scaleY="0.9"
                            android:text=" Weight loss"
                            android:textColor="@android:color/white" />

                        <RadioButton
                            android:id="@+id/BuildMuscle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="-3dp"
                            android:buttonTint="@android:color/white"
                            android:scaleX="0.9"
                            android:scaleY="0.9"
                            android:text=" Build up Muscle"
                            android:textColor="@android:color/white" />

                        <RadioButton
                            android:id="@+id/rbStayActive"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="-10dp"
                            android:buttonTint="@android:color/white"
                            android:scaleX="0.9"
                            android:scaleY="0.9"
                            android:text=" Stay Active (low intensity)"
                            android:textColor="@android:color/white" />
                    </RadioGroup>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- CARD 4: NOTIFICATIONS -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView4"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="#181818"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tvNotifs"
                        android:text="Encouraging Notifications"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="Receive daily motivation (Coming Soon)"
                        android:textColor="#838282"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"/>

                    <Switch
                        android:id="@+id/switchNotifs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Enable Notifications"
                        android:textColor="@android:color/white"
                        android:minHeight="48dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- NEW: LOG OUT BUTTON -->
            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:text="Log Out"
                android:textColor="@android:color/white"
                android:backgroundTint="#D32F2F"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"/>

            <View
                android:id="@+id/view"
                android:layout_width="20dp"
                android:layout_height="80dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        app:itemIconTint="@android:color/white"
        app:itemTextColor="@android:color/white"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>