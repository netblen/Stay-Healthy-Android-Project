<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorkoutActivity"
    android:background="@color/black">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="?attr/homeAsUpIndicator"
        app:tint="@color/white"
        app:layout_constraintTop_toTopOf="@id/tvWorkoutCat"
        app:layout_constraintBottom_toBottomOf="@id/tvWorkoutCat"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:clickable="true"
        android:focusable="true"/>

    <TextView
        android:id="@+id/tvWorkoutCat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Walking"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="370dp"
        android:layout_height="400dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvWorkoutCat"
        android:layout_marginTop="45dp"
        app:layout_constraintRight_toRightOf="parent"
        app:cardBackgroundColor="#181818"
        app:cardCornerRadius="25dp"
        >


        <TextView
            android:id="@+id/tvTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            android:textSize="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:textColor="@color/white"/>

        <LinearLayout
            android:id="@+id/linearLayoutEdData"
            app:layout_constraintTop_toBottomOf="@id/cardView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="260dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:layout_marginLeft="15dp"
            >


            <androidx.cardview.widget.CardView
                android:layout_width="155dp"
                android:layout_height="85dp"
                app:cardBackgroundColor="#837E7E"
                app:cardCornerRadius="16dp"
                >

                <TextView
                    android:id="@+id/tvSpeedTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Speed"
                    android:layout_gravity="center_horizontal"
                    android:textSize="20sp"
                    android:textColor="#1F1F1F"/>

                <TextView
                    android:id="@+id/tvSpeedData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-- km/h"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:textSize="20sp"/>

            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="85dp"
                android:layout_marginLeft="10dp"
                app:cardBackgroundColor="#837E7E"
                app:cardCornerRadius="16dp"
                >

                <TextView
                    android:id="@+id/tvStepsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Steps"
                    android:layout_gravity="center_horizontal"
                    android:textSize="20sp"
                    android:textColor="#1F1F1F"/>

                <TextView
                    android:id="@+id/tvStepsData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:textSize="20sp"
                    />

            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linearLayoutBtns"
        app:layout_constraintTop_toBottomOf="@id/cardView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="520dp"
        android:padding="30dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEndWorkout"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="End"
            android:textSize="20dp"
            android:layout_marginHorizontal="10dp"
            android:padding="15dp"
            app:cornerRadius="16dp"
            android:backgroundTint="#AF090F"/>

        <Button
            android:id="@+id/btnPauseResume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Start"
            android:textSize="20dp"
            android:padding="15dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/btn_custom"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>